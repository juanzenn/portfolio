<style>
  #modal_container {
    z-index: 1011;
    position: fixed;
    top: 0;
    background: rgba(0, 0, 0, 0.50);
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    display: none;

    animation: pop-up 500ms forwards;
  }
  h2 {
    color: #073569;
    margin-bottom: 1rem;
  }

  #modal {
    z-index: 2000;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgb(255, 255, 255);
    box-shadow: 0 0 0 5px #073569;
    border-radius: 10px;
    width: 70vw;
    height: auto;

    padding: 1rem;
  }

  .modal_header {
    position: relative;
  }

  .modal_header div {
    cursor: pointer;
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  .cross_icon {
    transition: all 200ms linear;
  }

  .cross_icon:hover {
    color: #93c5fd;
    stroke-width: 2;
  }

  .contact_container {
    width: 100%;
    display: flex;
    justify-content: space-around;

  }

  form {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
  }

  .form_control {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: .25rem;
  }

  .form_control label {
    font-weight: bold;
    color: rgb(107, 107, 107);
  }

  .form_control input,
  .form_control textarea {
    border: none;
    outline: none;
    background: rgb(233, 233, 233);
    border-radius: 5px;
    padding: .25rem;

    transition: all 150ms linear;
    box-shadow: 0 0 0 1px rgb(209, 209, 209);
  }

  .form_control input {
    font-size: 1rem;
  }

  .form_control input:hover,
  .form_control textarea:hover {
    box-shadow: 0 0 0 1px #93c5fd;
  }

  .form_control input:focus,
  .form_control textarea:focus {
    box-shadow: 0 0 0 2px #93c5fd, 0 3px 20px rgba(0, 0, 0, 0.25);
  }

  .form_control textarea {
    resize: none;
    width: 35vw;
    height: 250px;
  }

  button {
    width: fit-content;
  }

  @media (max-width: 576px) {
    form {
      gap: .5rem;
    }

    #form_sider {
      display: none;
    }

    .form_control textarea {
      width: 100%;
    }
  }

  @keyframes pop-up {
    from {
      opacity: 0;      
    }
    to {
      opacity: 1;      
    }
  }
</style>

